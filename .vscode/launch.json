    "version": "0.2.0",
    "configurations": [
        {
            "name": "Portal",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cdip_admin/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "0.0.0.0:8300",
                "--settings=cdip_admin.local_settings"
            ],
        
        },
        {
            "name": "example running a module",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/app/.env",
            "env": {
                "CDIP_SDK_ENVFILE": "${workspaceFolder}/app/.env"
            },
            "justMyCode": false
        },
    ]
}
